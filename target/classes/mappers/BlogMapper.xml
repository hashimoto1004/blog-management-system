<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.blog.mapper.BlogMapper">
    <resultMap id="BlogResultMap" type="com.example.blog.entity.Blog">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
    </resultMap>

    <select id="findAll" resultMap="BlogResultMap">
        SELECT * FROM blogs
    </select>

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO blogs (title, content) VALUES (#{title}, #{content})
    </insert>
</mapper>
